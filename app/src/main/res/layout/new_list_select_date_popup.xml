<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background"
    android:padding="10dp">

    <CalendarView
        android:id="@+id/new_list_date_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/new_list_confirm_date_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_list_date_select"
        android:layout_alignParentEnd="true"
        android:text="@string/new_list_calendar_select_btn_text" />

    <Button
        android:id="@+id/new_list_cancel_date_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_list_date_select"
        android:layout_alignParentStart="true"


        android:text="@string/new_list_calendar_cancel_btn_text" />

</RelativeLayout>